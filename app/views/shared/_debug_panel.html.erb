<div data-controller="debug-panel" data-debug-panel-environment-value="<%= Rails.env %>" class="fixed bottom-5 right-5 z-50">
  <div data-debug-panel-target="panel" class="bg-white shadow-lg rounded-lg p-4 w-64 border border-gray-300">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold">Debug Panel</h3>
      <button data-action="debug-panel#togglePanel" class="text-gray-500 hover:text-gray-700">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
    
    <div class="space-y-4">
      <!-- Authentication toggle -->
      <div>
        <button data-action="debug-panel#toggleAuth" class="w-full py-2 bg-blue-500 hover:bg-blue-600 text-white rounded">
          Toggle Auth State
        </button>
      </div>
      
      <!-- Credit balance control -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Set Credits</label>
        <div class="flex space-x-2">
          <input 
            type="number" 
            min="0" 
            step="0.01"
            data-debug-panel-target="creditInput" 
            class="w-full rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50"
            placeholder="Credit amount"
          >
          <button data-action="debug-panel#setCredits" class="p-2 bg-green-500 hover:bg-green-600 text-white rounded">
            Set
          </button>
        </div>
      </div>
      
      <!-- Quick add credits button -->
      <div>
        <button data-action="debug-panel#addTestCredits" class="w-full py-2 bg-green-500 hover:bg-green-600 text-white rounded">
          Add $10 Credits
        </button>
      </div>
      
      <!-- Reset call history -->
      <div>
        <button data-action="debug-panel#resetCalls" class="w-full py-2 bg-yellow-500 hover:bg-yellow-600 text-white rounded">
          Reset Call History
        </button>
      </div>
      
      <!-- Error triggers -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Trigger Error</label>
        <div class="flex space-x-2">
          <select data-debug-panel-target="errorTypeSelect" class="w-full rounded border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50">
            <option value="network">Network Error</option>
            <option value="server">Server Error</option>
            <option value="auth">Auth Error</option>
            <option value="unknown">Unknown Error</option>
          </select>
          <button data-action="debug-panel#triggerError" class="p-2 bg-red-500 hover:bg-red-600 text-white rounded">
            Go
          </button>
        </div>
      </div>
    </div>
    
    <div class="mt-4 pt-2 border-t border-gray-200 text-xs text-gray-500">
      <p>Press Shift+Ctrl+D to toggle this panel</p>
      <p class="mt-1">Environment: <%= Rails.env %></p>
    </div>
  </div>
  
  <!-- Toggle button when panel is hidden -->
  <button 
    data-action="debug-panel#togglePanel"
    class="absolute bottom-0 right-0 bg-gray-800 hover:bg-gray-700 text-white rounded-full p-3 shadow-lg"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
  </button>
</div> 