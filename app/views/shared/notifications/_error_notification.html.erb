<%# Error Notification Toast %>
<div 
  class="hidden fixed top-5 right-5 z-50 max-w-sm bg-white rounded-lg shadow-lg border border-gray-200"
  data-controller="notification"
  data-notification-type-value="toast"
  data-notification-auto-hide-value="true"
  data-notification-duration-value="5000"
  data-notification-target="notification">

  <div class="flex p-4">
    <div class="flex-shrink-0">
      <%# Icon changes based on error type %>
      <% case error_type %>
      <% when 'network' %>
        <svg class="w-6 h-6 text-error" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
        </svg>
      <% when 'invalid_number' %>
        <svg class="w-6 h-6 text-error" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
      <% when 'insufficient_credits' %>
        <svg class="w-6 h-6 text-error" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% when 'permissions' %>
        <svg class="w-6 h-6 text-error" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
        </svg>
      <% else %>
        <svg class="w-6 h-6 text-error" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      <% end %>
    </div>
    
    <div class="ml-3 w-0 flex-1 pt-0.5">
      <p class="text-sm font-medium text-gray-900" data-notification-target="content">
        <%= message %>
      </p>
      <% if action_text.present? && action_url.present? %>
        <div class="mt-3 flex space-x-3">
          <a href="<%= action_url %>" class="bg-white text-sm font-medium text-accent hover:text-yellow-600">
            <%= action_text %>
          </a>
        </div>
      <% end %>
    </div>
    
    <div class="flex-shrink-0 flex">
      <button
        class="inline-flex text-gray-400 hover:text-gray-500"
        data-action="notification#hide"
        data-notification-target="dismiss">
        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>
  
  <div class="bg-gray-100 px-4 py-1 rounded-b-lg">
    <div class="h-1 w-full bg-gray-200 rounded-full overflow-hidden">
      <div data-notification-target="progress" class="h-full bg-accent rounded-full w-full"></div>
    </div>
  </div>
</div> 