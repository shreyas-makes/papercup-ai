<% meta title: "Credits", description: "Manage your Papercup calling credits" %>

<div class="max-w-3xl mx-auto bg-secondary rounded-lg shadow-lg overflow-hidden">
  <!-- Credits header -->
  <div class="bg-primary text-secondary py-4 px-6">
    <h1 class="text-2xl font-semibold">Manage Credits</h1>
    <p class="text-sm opacity-80">Purchase and track your calling credits</p>
  </div>

  <!-- Current balance -->
  <div class="p-6 border-b border-background">
    <div class="flex items-center justify-between">
      <h2 class="text-lg font-medium">Current Balance</h2>
      <span class="text-2xl font-bold text-accent">$10.00</span>
    </div>
  </div>

  <!-- Purchase options -->
  <div class="p-6">
    <h2 class="text-lg font-medium mb-4">Purchase Credits</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="border-2 border-background rounded-lg p-4 text-center hover:border-accent cursor-pointer">
        <div class="text-xl font-bold">$5</div>
        <div class="text-text-secondary">30 minutes</div>
      </div>
      <div class="border-2 border-accent rounded-lg p-4 text-center bg-accent bg-opacity-5 cursor-pointer">
        <div class="text-xl font-bold">$10</div>
        <div class="text-text-secondary">70 minutes</div>
        <div class="text-xs mt-1 font-medium text-success">Best value</div>
      </div>
      <div class="border-2 border-background rounded-lg p-4 text-center hover:border-accent cursor-pointer">
        <div class="text-xl font-bold">$20</div>
        <div class="text-text-secondary">150 minutes</div>
      </div>
    </div>
    <button class="w-full mt-6 py-3 bg-accent hover:bg-opacity-90 text-primary rounded-lg font-medium">
      Add Credits
    </button>
  </div>
</div>

<div class="max-w-3xl mx-auto mt-8 p-6 bg-secondary rounded-lg shadow-lg">
  <h2 class="text-xl font-semibold mb-4">Transaction History</h2>
  <p class="text-text-secondary">Your transaction history will appear here.</p>
  <!-- This will be populated with actual transaction history later -->
</div> 