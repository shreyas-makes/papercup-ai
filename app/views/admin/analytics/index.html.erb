<div class="bg-white min-h-screen">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-8">
    <div class="sm:flex sm:items-center">
      <div class="sm:flex-auto">
        <h1 class="text-2xl font-semibold text-gray-900">Analytics Dashboard</h1>
        <p class="mt-2 text-sm text-gray-700">
          Comprehensive overview of call quality, volume, and user metrics.
        </p>
      </div>
    </div>

    <!-- Summary stats -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate">Total Calls</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:total_calls] %></div>
              </dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:total_users] %></div>
              </dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate">Calls Today</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:calls_today] %></div>
              </dd>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
              <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dt class="text-sm font-medium text-gray-500 truncate">Active Users (30d)</dt>
              <dd class="flex items-baseline">
                <div class="text-2xl font-semibold text-gray-900"><%= @stats[:active_users] %></div>
              </dd>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Analytics Nav -->
    <div class="mt-8 border-b border-gray-200">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <a href="<%= admin_analytics_path %>" class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Overview</a>
        <a href="<%= call_volume_admin_analytics_path %>" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Call Volume</a>
        <a href="<%= call_quality_admin_analytics_path %>" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Call Quality</a>
        <a href="<%= revenue_admin_analytics_path %>" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Revenue</a>
        <a href="<%= destinations_admin_analytics_path %>" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Destinations</a>
        <a href="<%= users_admin_analytics_path %>" class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">Users</a>
      </nav>
    </div>

    <!-- Date Range Picker -->
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Date Range</h3>
        <div class="mt-2 max-w-xl text-sm text-gray-500">
          <p>Select a date range for the analytics data</p>
        </div>
        <form action="<%= admin_analytics_path %>" method="get" class="mt-5 sm:flex sm:items-center">
          <div class="w-full sm:max-w-xs">
            <label for="start_date" class="sr-only">Start Date</label>
            <input type="date" name="start_date" id="start_date" value="<%= 30.days.ago.strftime('%Y-%m-%d') %>" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
          <div class="w-full sm:max-w-xs mt-3 sm:mt-0 sm:ml-4">
            <label for="end_date" class="sr-only">End Date</label>
            <input type="date" name="end_date" id="end_date" value="<%= Date.today.strftime('%Y-%m-%d') %>" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">
          </div>
          <button type="submit" class="mt-3 sm:mt-0 sm:ml-4 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Apply</button>
        </form>
      </div>
    </div>

    <!-- Chart placeholders - In a real app, would be populated with Chart.js or similar -->
    <div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Call Volume (Last 30 Days)</h3>
          <div class="mt-1 text-3xl font-semibold text-gray-900"><!-- Chart Placeholder --></div>
          <div class="h-64 w-full mt-4 text-center text-gray-500 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center">
            <p>Call Volume Chart (Loads with JavaScript)</p>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Call Quality (Last 30 Days)</h3>
          <div class="mt-1 text-3xl font-semibold text-gray-900"><!-- Chart Placeholder --></div>
          <div class="h-64 w-full mt-4 text-center text-gray-500 border-2 border-dashed border-gray-300 rounded-lg flex items-center justify-center">
            <p>Call Quality Chart (Loads with JavaScript)</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent calls table -->
    <div class="mt-8 bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Calls</h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Latest call activity across the platform</p>
      </div>
      <div class="border-t border-gray-200">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date/Time</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Number</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quality</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% Call.recent.limit(10).each do |call| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= call.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= call.user&.email %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= call.phone_number %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= "#{call.duration.to_i} sec" %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= call.status == 'completed' ? 'bg-green-100 text-green-800' : 
                          call.status == 'dropped' ? 'bg-red-100 text-red-800' : 
                          'bg-yellow-100 text-yellow-800' %>">
                      <%= call.status.titleize %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                      <%= case call.quality_rating
                          when :excellent then 'bg-green-100 text-green-800'
                          when :good then 'bg-green-100 text-green-800'
                          when :fair then 'bg-yellow-100 text-yellow-800'
                          when :poor, :bad then 'bg-red-100 text-red-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= call.quality_rating.to_s.titleize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div> 